# Ansible Inventory for Jenkins Automation Project
# Rocky Linux 9 hosts - credentials managed via vault
# Hostnames represent DNS names (after reverse proxy where applicable)

[jenkins_servers]
jenkins.local ansible_host=192.168.201.14

[nginx]
nginx-proxy ansible_host=192.168.201.15

[sonarqube_servers]
sonar.local ansible_host=192.168.201.16

[artifactory_servers]
artifactory.local ansible_host=192.168.201.11

[freeipa]
freeipa.local ansible_host=192.168.201.13

[keycloak]
keycloak.local ansible_host=192.168.201.12

# Group variables for all hosts
[all:vars]
ansible_become=yes
ansible_become_method=sudo
ansible_ssh_common_args='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'
ansible_python_interpreter=/usr/bin/python3
