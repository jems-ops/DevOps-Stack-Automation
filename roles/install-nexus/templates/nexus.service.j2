[Unit]
Description=Nexus Repository Manager
After=network.target

[Service]
Type=forking
LimitNOFILE=65536
Environment="INSTALL4J_JAVA_HOME=/usr/lib/jvm/jre-1.8.0-openjdk"
ExecStart={{ nexus_home }}/bin/nexus start
ExecStop={{ nexus_home }}/bin/nexus stop
User={{ nexus_user }}
Restart=on-abort
TimeoutSec=600

[Install]
WantedBy=multi-user.target
