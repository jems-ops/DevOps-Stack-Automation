# Nexus Repository Manager nginx reverse proxy configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}
# Backend: {{ backend_host }}:{{ backend_port }}

upstream nexus {
  keepalive {{ nginx_keepalive_connections }}; # keepalive connections
  server {{ backend_host }}:{{ backend_port }}; # nexus ip and port
}

server {
  listen          {{ nginx_listen_port }};       # Listen on port 80 for IPv4 requests

  server_name     {{ nginx_server_name }};  # nexus server domain name

  access_log      {{ nginx_access_log }};
  error_log       {{ nginx_error_log }};

  # pass through headers from Nexus that Nginx considers invalid
  ignore_invalid_headers off;

  # Allow large uploads for artifacts
  client_max_body_size       {{ nginx_client_max_body_size }};
  client_body_buffer_size    {{ nginx_client_body_buffer_size }};

  # Disable request and response buffering
  proxy_request_buffering    off;

  location / {
      proxy_pass         http://nexus;
      proxy_redirect     default;
      proxy_http_version 1.1;

      proxy_set_header   Host              $http_host;
      proxy_set_header   X-Real-IP         $remote_addr;
      proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
      proxy_set_header   X-Forwarded-Proto $scheme;
      proxy_set_header   Connection        "";
      proxy_max_temp_file_size 0;

      proxy_connect_timeout      {{ nginx_proxy_connect_timeout }};
      proxy_send_timeout         {{ nginx_proxy_send_timeout }};
      proxy_read_timeout         {{ nginx_proxy_read_timeout }};

      # Required for new HTTP-based CLI
      proxy_buffering            off;
  }

  # Docker repository support (if needed)
  # Uncomment if using Nexus Docker registry
  # location /v2/ {
  #     proxy_pass         http://nexus;
  #     proxy_http_version 1.1;
