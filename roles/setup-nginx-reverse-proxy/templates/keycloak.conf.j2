# HTTP server for keycloak.local - redirect to HTTPS
server {
  listen          80;
  server_name     keycloak.local;

  return 301 https://$server_name$request_uri;
}

# HTTPS server for keycloak.local
server {
  listen          443 ssl;
  server_name     keycloak.local;

  ssl_certificate     /etc/nginx/ssl/keycloak.crt;
  ssl_certificate_key /etc/nginx/ssl/keycloak.key;
  ssl_protocols       TLSv1.2 TLSv1.3;
  ssl_ciphers         HIGH:!aNULL:!MD5;

  add_header Strict-Transport-Security "max-age=63072000" always;

  access_log /var/log/nginx/keycloak-access.log;
  error_log  /var/log/nginx/keycloak-error.log;

  location / {
    proxy_pass         http://192.168.201.12:8080;
    proxy_http_version 1.1;

    proxy_set_header   Host              $host;
    proxy_set_header   X-Real-IP         $remote_addr;
    proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_set_header   X-Forwarded-Port  $server_port;

    proxy_buffer_size          128k;
    proxy_buffers              4 256k;
    proxy_busy_buffers_size    256k;
  }
}
