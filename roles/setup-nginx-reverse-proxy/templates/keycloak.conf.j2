# Keycloak nginx reverse proxy configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}
# Backend: {{ backend_host }}:{{ backend_port }}

upstream keycloak {
  keepalive {{ nginx_keepalive_connections }}; # keepalive connections
  server {{ backend_host }}:{{ backend_port }}; # keycloak ip and port
}

server {
  listen          {{ nginx_listen_port }};       # Listen on port 80 for IPv4 requests

  server_name     {{ nginx_server_name }};  # keycloak server domain name

  access_log      {{ nginx_access_log }};
  error_log       {{ nginx_error_log }};

  # pass through headers from Keycloak that Nginx considers invalid
  ignore_invalid_headers off;

  location / {
      proxy_pass         http://keycloak;
      proxy_redirect     default;
      proxy_http_version 1.1;

      proxy_set_header   Host              $http_host;
      proxy_set_header   X-Real-IP         $remote_addr;
      proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
      proxy_set_header   X-Forwarded-Proto $scheme;
      proxy_set_header   X-Forwarded-Host  $host;
      proxy_set_header   X-Forwarded-Port  $server_port;
      proxy_max_temp_file_size 0;

      # Keycloak specific headers for proper operation behind proxy
      proxy_set_header   Connection        "";

      #this is the maximum upload size
      client_max_body_size       {{ nginx_client_max_body_size }};
      client_body_buffer_size    {{ nginx_client_body_buffer_size }};

      proxy_connect_timeout      {{ nginx_proxy_connect_timeout }};
      proxy_send_timeout         {{ nginx_proxy_send_timeout }};
      proxy_read_timeout         {{ nginx_proxy_read_timeout }};
      proxy_request_buffering    on; # Keycloak can handle request buffering
  }

}
