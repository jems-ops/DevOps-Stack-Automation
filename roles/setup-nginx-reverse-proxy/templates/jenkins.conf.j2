# Jenkins nginx reverse proxy configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}
# Backend: {{ jenkins_backend_host }}:{{ jenkins_backend_port }}

upstream jenkins {
  keepalive {{ nginx_keepalive_connections }}; # keepalive connections
  server {{ jenkins_backend_host }}:{{ jenkins_backend_port }}; # jenkins ip and port
}

# Required for Jenkins websocket agents
map $http_upgrade $connection_upgrade {
  default upgrade;
  '' close;
}

server {
  listen          {{ nginx_listen_port }};       # Listen on port 80 for IPv4 requests

  server_name     {{ nginx_server_name }};  # replace 'jenkins.example.com' with your server domain name

  # this is the jenkins web root directory
  # (mentioned in the output of "systemctl cat jenkins")
  root            {{ jenkins_war_root }}/;

  access_log      {{ nginx_access_log }};
  error_log       {{ nginx_error_log }};

  # pass through headers from Jenkins that Nginx considers invalid
  ignore_invalid_headers off;

  location ~ "^\/static\/[0-9a-fA-F]{8}\/(.*)$" {
    # rewrite all static files into requests to the root
    # E.g /static/12345678/css/something.css will become /css/something.css
    rewrite "^\/static\/[0-9a-fA-F]{8}\/(.*)" /$1 last;
  }

  location /userContent {
    # have nginx handle all the static requests to userContent folder
    # note : This is the $JENKINS_HOME dir
    root {{ jenkins_home }}/;
    if (!-f $request_filename){
      # this file does not exist, might be a directory or a /**view** url
      rewrite (.*) /$1 last;
      break;
    }
    sendfile on;
  }

  location / {
      sendfile off;
      proxy_pass         http://jenkins;
      proxy_redirect     default;
      proxy_http_version 1.1;

      # Required for Jenkins websocket agents
      proxy_set_header   Connection        $connection_upgrade;
      proxy_set_header   Upgrade           $http_upgrade;

      proxy_set_header   Host              $http_host;
      proxy_set_header   X-Real-IP         $remote_addr;
      proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
      proxy_set_header   X-Forwarded-Proto $scheme;
      proxy_max_temp_file_size 0;

      #this is the maximum upload size
      client_max_body_size       {{ nginx_client_max_body_size }};
      client_body_buffer_size    {{ nginx_client_body_buffer_size }};

      proxy_connect_timeout      {{ nginx_proxy_connect_timeout }};
      proxy_send_timeout         {{ nginx_proxy_send_timeout }};
      proxy_read_timeout         {{ nginx_proxy_read_timeout }};
      proxy_request_buffering    off; # Required for HTTP CLI commands
  }

}
