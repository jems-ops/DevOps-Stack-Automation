# Dynamic nginx reverse proxy configuration with SSL
# Generated by Ansible on {{ ansible_date_time.iso8601 }}
# Configured for {{ setup_nginx_reverse_proxy_sites | length }} backends

{% for site in setup_nginx_reverse_proxy_sites %}
# Upstream for {{ site.server_name }}
upstream {{ site.name }}_backend {
  keepalive 32;
  server {{ site.backend_host }}:{{ site.backend_port }};
}
{% endfor %}

{% set has_jenkins = (setup_nginx_reverse_proxy_sites | selectattr('name','equalto','jenkins') | list | length) > 0 %}

{% if has_jenkins %}
# Required for Jenkins websocket agents
map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}
{% endif %}

{% for site in setup_nginx_reverse_proxy_sites %}
# HTTP server for {{ site.server_name }} - redirect to HTTPS
server {
  listen      {{ nginx_http_port }};
  server_name {{ site.server_name }};

  return 301 https://$server_name$request_uri;
}
{% endfor %}

{% for site in setup_nginx_reverse_proxy_sites %}
# HTTPS server for {{ site.server_name }}
server {
  listen      {{ nginx_https_port }} ssl http2;
  server_name {{ site.server_name }};

  ssl_certificate     {{ ssl_cert_dir }}/{{ site.server_name }}.crt;
  ssl_certificate_key {{ ssl_cert_dir }}/{{ site.server_name }}.key;
  ssl_dhparam         {{ ssl_dhparam_file }};

  ssl_protocols {{ ssl_protocols }};
  ssl_ciphers   {{ ssl_ciphers }};
  ssl_prefer_server_ciphers {{ ssl_prefer_server_ciphers }};

  ssl_session_timeout 1d;
  ssl_session_cache shared:MozTLS:10m;
  ssl_session_tickets off;

  add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
  add_header X-Frame-Options DENY;
  add_header X-Content-Type-Options nosniff;
  add_header X-XSS-Protection "1; mode=block";

  access_log /var/log/nginx/{{ site.name }}-ssl.access.log;
  error_log  /var/log/nginx/{{ site.name }}-ssl.error.log;

  {% if site.name == 'jenkins' %}
  # allow Jenkins specific headers to pass
  ignore_invalid_headers off;
  {% endif %}

{% if site_rewrite_rule is defined %}
  # Global rewrite rule
  rewrite {{ site_rewrite_rule }};
{% endif %}

{% if site.name == 'jenkins' %}
  # Jenkins-specific configuration
  root /var/run/jenkins/war/;

  location ~ "^/static/[0-9a-fA-F]{8}/(.*)$" {
    rewrite "^/static/[0-9a-fA-F]{8}/(.*)" /$1 last;
  }

  location /userContent {
    root /var/lib/jenkins/;
    if (!-f $request_filename){
      rewrite (.*) /$1 last;
      break;
    }
    sendfile on;
  }
{% endif %}

  location / {
    proxy_pass         http://{{ site.name }}_backend;
    proxy_redirect     default;
    proxy_http_version 1.1;

{% if site.name == 'jenkins' %}
    # Required for Jenkins websocket agents
    proxy_set_header   Connection        $connection_upgrade;
    proxy_set_header   Upgrade           $http_upgrade;
{% endif %}

    proxy_set_header   Host              $http_host;
    proxy_set_header   X-Real-IP         $remote_addr;
    proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_max_temp_file_size 0;

    client_max_body_size    {{ nginx_client_max_body_size | default("10m") }};
    client_body_buffer_size {{ nginx_client_body_buffer_size | default("128k") }};

    proxy_connect_timeout   {{ nginx_proxy_connect_timeout | default(90) }};
    proxy_send_timeout      {{ nginx_proxy_send_timeout | default(90) }};
    proxy_read_timeout      {{ nginx_proxy_read_timeout | default(90) }};

{% if site.name == 'jenkins' %}
    proxy_request_buffering off; # Required for HTTP CLI commands & Jenkins
{% else %}
    proxy_request_buffering on;
{% endif %}
  }
}
{% endfor %}
