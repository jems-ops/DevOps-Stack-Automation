# Keycloak HTTPS reverse proxy
# Generated by Ansible on {{ ansible_date_time.iso8601 }}
# Server: {{ keycloak_server_name }}
# Backend: {{ keycloak_backend_host }}:{{ keycloak_backend_port }}

upstream keycloak_upstream {
  server {{ keycloak_backend_host }}:{{ keycloak_backend_port }};
  keepalive {{ nginx_keepalive_connections }};
}

server {
  listen 443 ssl default_server;
  server_name {{ keycloak_server_name }} _;

  # SSL Configuration
  ssl_certificate     {{ keycloak_ssl_certificate_path | default('/etc/nginx/ssl/keycloak.crt') }};
  ssl_certificate_key {{ keycloak_ssl_certificate_key_path | default('/etc/nginx/ssl/keycloak.key') }};
  ssl_protocols {{ ssl_protocols }};
  ssl_prefer_server_ciphers on;
  ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA384;

  # Security Headers
{% for header in nginx_security_headers %}
  add_header {{ header }};
{% endfor %}

  # Keycloak specific location
  location / {
    proxy_pass http://keycloak_upstream;
    proxy_http_version 1.1;
    proxy_set_header Connection "";

    # Standard proxy headers
    proxy_set_header Host               $host;
    proxy_set_header X-Forwarded-Host   $host;
    proxy_set_header X-Forwarded-Port   $server_port;
    proxy_set_header X-Forwarded-Proto  $scheme;
    proxy_set_header X-Real-IP          $remote_addr;
    proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;

    # Keycloak specific headers
    proxy_set_header X-Forwarded-Server $host;
    proxy_set_header X-Forwarded-Ssl    on;

    # Timeouts
    proxy_connect_timeout {{ nginx_proxy_connect_timeout }};
    proxy_send_timeout    {{ nginx_proxy_send_timeout }};
    proxy_read_timeout    {{ nginx_proxy_read_timeout }};

    # Buffer settings for better performance
    proxy_buffering on;
    proxy_buffer_size 4k;
    proxy_buffers 8 4k;
  }

  # Health check endpoint (optional)
  location /health {
    access_log off;
    return 200 "healthy\n";
    add_header Content-Type text/plain;
  }
}
